<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <ImageView
        android:id="@+id/iv_burger"
        android:layout_width="279dp"

        android:layout_height="300dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/burger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dipslay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/iv_add"
        app:layout_constraintStart_toEndOf="@+id/iv_cut"
        app:layout_constraintTop_toBottomOf="@+id/iv_burger" />

    <ImageButton
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dipslay"
        app:layout_constraintEnd_toEndOf="@+id/iv_burger"
        app:layout_constraintTop_toTopOf="@+id/tv_dipslay"
        app:layout_constraintVertical_bias="0.48"
        android:contentDescription="add_button" />

    <ImageButton
        android:id="@+id/iv_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dipslay"
        app:layout_constraintStart_toStartOf="@+id/iv_burger"
        app:layout_constraintTop_toTopOf="@+id/tv_dipslay"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dipslay" />


</androidx.constraintlayout.widget.ConstraintLayout>